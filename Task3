function checkProbabilityTheory(count) {
    let evenCount = 0;
    let oddCount = 0;

    // Генеруємо випадкові числа та підраховуємо парні та непарні числа
    for (let i = 0; i < count; i++) {
        const randomNumber = Math.floor(Math.random() * (1000 - 100 + 1)) + 100;
        if (randomNumber % 2 === 0) {
            evenCount++;
        } else {
            oddCount++;
        }
    }

    // Обчислюємо відсоткове співвідношення
    const total = evenCount + oddCount;
    const evenPercentage = (evenCount / total) * 100;
    const oddPercentage = (oddCount / total) * 100;

    // Виводимо результати
    console.log("Кількість згенерованих чисел:", total);
